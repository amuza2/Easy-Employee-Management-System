<UserControl
    x:Class="EEMS.UI.UserControls.VioletButtonFill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="155"
    mc:Ignorable="d">
    <Button Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource addButton}">
        <StackPanel Orientation="Horizontal">
            <Icon:PackIconMaterial
                Width="11"
                Height="11"
                Margin="0,1,8,0"
                VerticalAlignment="Center"
                Kind="Plus" />
            <TextBlock Text="{Binding PlaceholderText, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>
    </Button>
</UserControl>
