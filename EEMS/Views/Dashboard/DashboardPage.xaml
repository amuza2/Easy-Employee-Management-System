        <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="#e6ebf5" />
        </Trigger>
        </Style.Triggers>
        </Style>-->

        <DropShadowEffect
            x:Key="CardShadow"
            BlurRadius="10"
            Direction="-90"
            Opacity="0.1"
            ShadowDepth="3"
            Color="#000000" />

        <!--  Dashboard Stat Card Style  -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="0,0,15,15" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="10"
                        Direction="-90"
                        Opacity="0.1"
                        ShadowDepth="3"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Border>
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Content Area  -->
                <Border CornerRadius="0,0,16,16">

                    <Grid Margin="25,15,25,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Employee Profile Summary  -->
                        <Border
                            Grid.Row="0"
                            Margin="0,0,0,20"
                            Padding="25,20"
                            Background="White"
                            CornerRadius="12"
                            Effect="{StaticResource CardShadow}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Profile Image  -->
                                <Border
                                    Grid.Column="0"
                                    Width="80"
                                    Height="80"
                                    Background="#e6ebf5"
                                    CornerRadius="40">
                                    <Icon:PackIconMaterial
                                        Width="50"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="#4880ff"
                                        Kind="AccountCircle" />
                                </Border>

                                <!--  Employee Basic Info  -->
                                <StackPanel
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Margin="20,0,0,0"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="24"
                                        FontWeight="Bold"
                                        Foreground="#333333">
                                        <Run Text="{Binding SelectedEmployee.FirstName}" />
                                        <Run Text=" " />
                                        <Run Text="{Binding SelectedEmployee.LastName}" />
                                    </TextBlock>
                                    <TextBlock
                                        Margin="0,5,0,5"
                                        FontSize="16"
                                        Foreground="#4880ff"
                                        Text="{Binding SelectedEmployee.JobTitle}" />
                                    <StackPanel Orientation="Horizontal">
                                        <Icon:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            VerticalAlignment="Center"
                                            Foreground="#555555"
                                            Kind="OfficeBuilding" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="14"
                                            Foreground="#555555"
                                            Text="{Binding SelectedEmployee.Department.Name}" />

                                        <Icon:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            Margin="20,0,0,0"
                                            VerticalAlignment="Center"
                                            Foreground="#555555"
                                            Kind="Email" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="14"
                                            Foreground="#555555"
                                            Text="{Binding SelectedEmployee.Email}" />

                                        <Icon:PackIconMaterial
                                            Width="16"
                                            Height="16"
                                            Margin="20,0,0,0"
                                            VerticalAlignment="Center"
                                            Foreground="#555555"
                                            Kind="Phone" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            FontSize="14"
                                            Foreground="#555555"
                                            Text="{Binding SelectedEmployee.Phone}" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Quick Actions  -->
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        Margin="20,0"
                                        Command="{Binding ViewEmployeeDetailsCommand}"
                                        Content="View Details"
                                        Style="{StaticResource mainButton}">
                                        <Button.Effect>
                                            <DropShadowEffect
                                                BlurRadius="8"
                                                Direction="-90"
                                                Opacity="0.2"
                                                ShadowDepth="2"
                                                Color="#000000" />
                                        </Button.Effect>
                                    </Button>
                                    <Button
                                        Width="100"
                                        Command="{Binding EditEmployeeCommand}"
                                        Content="Edit"
                                        Style="{StaticResource SecondaryButton}">
                                        <Button.Effect>
                                            <DropShadowEffect
                                                BlurRadius="8"
                                                Direction="-90"
                                                Opacity="0.2"
                                                ShadowDepth="2"
                                                Color="#000000" />
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!--  Employee Statistics Row  -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Years of Service  -->
                            <Border Grid.Column="0" Style="{StaticResource StatCard}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Grid.Column="0"
                                        Width="50"
                                        Height="50"
                                        Background="#e6f0ff"
                                        CornerRadius="10">
                                        <Icon:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="#4880ff"
                                            Kind="CalendarClock" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Style="{StaticResource StatLabelText}" Text="YEARS OF SERVICE" />
                                        <TextBlock Style="{StaticResource StatValueText}" Text="{Binding YearsOfService}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#4880ff"
                                            Text="Since recruitment" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!--  Total Absences  -->
                            <Border Grid.Column="1" Style="{StaticResource StatCard}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Grid.Column="0"
                                        Width="50"
                                        Height="50"
                                        Background="#ffe6e6"
                                        CornerRadius="10">
                                        <Icon:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="#ff4d4d"
                                            Kind="CalendarRemove" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Style="{StaticResource StatLabelText}" Text="TOTAL ABSENCES" />
                                        <TextBlock Style="{StaticResource StatValueText}" Text="{Binding TotalAbsences}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#ff4d4d"
                                            Text="All time" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!--  Experience  -->
                            <Border Grid.Column="2" Style="{StaticResource StatCard}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Grid.Column="0"
                                        Width="50"
                                        Height="50"
                                        Background="#e6fff2"
                                        CornerRadius="10">
                                        <Icon:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="#00cc66"
                                            Kind="ChartBar" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Style="{StaticResource StatLabelText}" Text="EXPERIENCE" />
                                        <TextBlock Style="{StaticResource StatValueText}">
                                            <Run Text="{Binding SelectedEmployee.Experience}" />
                                            <Run Text=" years" />
                                        </TextBlock>
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#00cc66"
                                            Text="Prior experience" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!--  Status  -->
                            <Border Grid.Column="3" Style="{StaticResource StatCard}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border
                                        Grid.Column="0"
                                        Width="50"
                                        Height="50"
                                        Background="#f0f0ff"
                                        CornerRadius="10">
                                        <Icon:PackIconMaterial
                                            Width="30"
                                            Height="30"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="#6666ff"
                                            Kind="AccountCheck" />
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Style="{StaticResource StatLabelText}" Text="STATUS" />
                                        <TextBlock Style="{StaticResource StatValueText}" Text="{Binding SelectedEmployee.IsActive}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#6666ff"
                                            Text="Employment status" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>

                        <!--  Main Dashboard Content  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--  Left Content: Absence History & Other Charts  -->
                            <Border
                                Grid.Column="0"
                                Margin="0,0,10,0"
                                Padding="25,20"
                                Background="White"
                                CornerRadius="12"
                                Effect="{StaticResource CardShadow}">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Header with Title and Filter  -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Column="0"
                                            Style="{StaticResource CardHeaderText}"
                                            Text="Absence History" />

                                        <ComboBox
                                            Grid.Column="1"
                                            Width="120"
                                            ItemsSource="{Binding YearFilterOptions}"
                                            SelectedIndex="0"
                                            SelectedItem="{Binding SelectedYearFilter}" />
                                    </Grid>

                                    <!--  DataGrid for Absences  -->
                                    <DataGrid
                                        Grid.Row="1"
                                        Margin="0,10,0,0"
                                        AutoGenerateColumns="False"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding AbsenceHistory}"
                                        VirtualizingPanel.IsVirtualizing="True"
                                        VirtualizingPanel.VirtualizationMode="Recycling">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn
                                                Width="110"
                                                Binding="{Binding Date, StringFormat='{}{0:MM/dd/yyyy}'}"
                                                Header="Date" />
                                            <DataGridTextColumn
                                                Width="*"
                                                Binding="{Binding Reason}"
                                                Header="Note" />
                                            <DataGridTextColumn
                                                Width="120"
                                                Binding="{Binding HasJustification}"
                                                Header="Status" />
                                            <DataGridTemplateColumn Width="100" Header="Actions">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button
                                                            Padding="5,3"
                                                            Command="{Binding DataContext.ViewAbsenceDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                                            CommandParameter="{Binding}"
                                                            Content="View"
                                                            Style="{StaticResource SecondaryButton}" />
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </Border>

                            <!--  Right Content: Employment Details & Qualifications  -->
                            <Border
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                Padding="25,20"
                                Background="White"
                                CornerRadius="12"
                                Effect="{StaticResource CardShadow}">

                                <StackPanel>
                                    <TextBlock Style="{StaticResource CardHeaderText}" Text="Employment Details" />

                                    <Grid Margin="0,15,0,20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Row 1  -->
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontWeight="Medium"
                                            Text="Department:" />
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,0,10"
                                            Text="{Binding SelectedEmployee.Department.Name}" />

                                        <!--  Row 2  -->
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            FontWeight="Medium"
                                            Text="Job Nature:" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,0,0,10"
                                            Text="{Binding SelectedEmployee.JobNatureItem}" />

                                        <!--  Row 3  -->
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            FontWeight="Medium"
                                            Text="Recruitment Date:" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="0,0,0,10"
                                            Text="{Binding SelectedEmployee.RecruitmentDate, StringFormat='{}{0:MM/dd/yyyy}'}" />

                                        <!--  Row 4  -->
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            FontWeight="Medium"
                                            Text="Status:" />
                                        <TextBlock
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="0,0,0,10"
                                            Text="{Binding SelectedEmployee.IsActive}" />

                                    </Grid>

                                    <TextBlock Style="{StaticResource CardHeaderText}" Text="Qualifications" />

                                    <!--  Essential Training  -->
                                    <TextBlock
                                        Margin="0,10,0,5"
                                        FontWeight="Medium"
                                        Text="Essential Training:" />
                                    <Border
                                        Padding="10"
                                        Background="#f8fafc"
                                        CornerRadius="6">
                                        <TextBlock Text="{Binding SelectedEmployee.EssentialTraining}" TextWrapping="Wrap" />
                                    </Border>

                                    <!--  Training  -->
                                    <TextBlock
                                        Margin="0,15,0,5"
                                        FontWeight="Medium"
                                        Text="Additional Training:" />
                                    <Border
                                        Padding="10"
                                        Background="#f8fafc"
                                        CornerRadius="6">
                                        <TextBlock Text="{Binding SelectedEmployee.Training}" TextWrapping="Wrap" />
                                    </Border>

                                    <!--  Languages  -->
                                    <TextBlock
                                        Margin="0,15,0,5"
                                        FontWeight="Medium"
                                        Text="Languages Spoken:" />
                                    <Border
                                        Padding="10"
                                        Background="#f8fafc"
                                        CornerRadius="6">
                                        <TextBlock Text="{Binding SelectedEmployee.LanguagesSpoken}" TextWrapping="Wrap" />
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!--  Action Buttons  -->
                        <StackPanel
                            Grid.Row="3"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">

                            <Button
                                Command="{Binding ShowEmployeeSearchWindowCommand}"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Style="{StaticResource mainButton}">
                                <Button.Effect>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Direction="-90"
                                        Opacity="0.2"
                                        ShadowDepth="3"
                                        Color="#000000" />
                                </Button.Effect>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial
                                        Width="20"
                                        Height="20"
                                        Margin="0,1,8,0"
                                        VerticalAlignment="Center"
                                        Kind="SearchWeb" />
                                    <TextBlock Text="Search Employee" />
                                </StackPanel>
                            </Button>

                            <Button
                                Margin="20,0"
                                Command="{Binding RequestAbsenceCommand}"
                                Content="Request Absence"
                                Style="{StaticResource SecondaryButton}">
                                <Button.Effect>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Direction="-90"
                                        Opacity="0.2"
                                        ShadowDepth="3"
                                        Color="#000000" />
                                </Button.Effect>
                            </Button>

                            <Button
                                Command="{Binding GenerateReportCommand}"
                                Content="Generate Report"
                                Style="{StaticResource mainButton}">
                                <Button.Effect>
                                    <DropShadowEffect
                                        BlurRadius="8"
                                        Direction="-90"
                                        Opacity="0.2"
                                        ShadowDepth="3"
                                        Color="#000" />
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Page>
