<Window
    x:Class="EEMS.UI.Views.Shared.DocumentPrinting.LiveDocumentDesignerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Shared.DocumentPrinting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LiveDocumentDesignerWindow"
    Width="1200"
    Height="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left panel for code editing  -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="5"
                FontWeight="Bold"
                Text="Document Code" />

            <TextBox
                x:Name="codeTextBox"
                Grid.Row="1"
                Margin="5"
                AcceptsReturn="True"
                AcceptsTab="True"
                FontFamily="Consolas"
                FontSize="12"
                HorizontalScrollBarVisibility="Auto"
                TextWrapping="NoWrap"
                VerticalScrollBarVisibility="Auto" />

            <StackPanel
                Grid.Row="2"
                Margin="5"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnExecute"
                    Width="120"
                    Height="30"
                    Margin="5"
                    Click="btnExecute_Click"
                    Content="Generate Preview" />
                <Button
                    x:Name="btnCopyCode"
                    Width="80"
                    Height="30"
                    Margin="5"
                    Click="btnCopyCode_Click"
                    Content="Copy Code" />
            </StackPanel>
        </Grid>

        <!--  Splitter  -->
        <GridSplitter
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Stretch" />

        <!--  Right panel for document preview  -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="5"
                FontWeight="Bold"
                Text="Document Preview" />

            <FlowDocumentReader
                x:Name="documentReader"
                Grid.Row="1"
                Margin="5"
                Background="White"
                BorderBrush="LightGray"
                BorderThickness="1"
                ViewingMode="Scroll"
                Zoom="100">
                <FlowDocument>
                    <Paragraph>Preview will appear here...</Paragraph>
                </FlowDocument>
            </FlowDocumentReader>
        </Grid>
    </Grid>

</Window>
