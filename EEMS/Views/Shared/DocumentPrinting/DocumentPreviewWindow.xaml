<Window
    x:Class="EEMS.UI.Views.Shared.DocumentPrinting.DocumentPreviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Shared.DocumentPrinting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Document Preview Window"
    Width="900"
    Height="700"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  FlowDocumentReader allows zoom, search, and different view modes  -->
        <FlowDocumentReader
            Name="documentReader"
            Grid.Row="0"
            IsFindEnabled="True"
            ViewingMode="TwoPage"
            Zoom="100">
            <!--  The FlowDocument will be set in code behind  -->
        </FlowDocumentReader>

        <!--  Button Panel  -->
        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Name="btnClose"
                Margin="10,0"
                Click="btnClose_Click"
                Content="Close"
                Style="{StaticResource SecondaryButton}" />
            <Button
                Name="btnPrint"
                Margin="5"
                Click="btnPrint_Click"
                Content="Print"
                Style="{StaticResource mainButton}" />
            <!--<Button
            Name="btnExportPDF"
            Width="80"
            Height="30"
            Margin="5"
            Click="btnExportPDF_Click"
            Content="Export PDF" />-->
        </StackPanel>
    </Grid>
</Window>
