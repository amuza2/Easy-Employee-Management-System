<Window
    x:Class="EEMS.UI.Views.Absences.ViewAbsenceDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Absences"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ViewAbsenceDetails"
    Width="500"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        BorderBrush="#4880ff"
        BorderThickness="3"
        CornerRadius="22">

        <Border
            Background="#FFF"
            CornerRadius="20"
            MouseDown="Border_MouseDown">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  top  -->
                <TextBlock
                    Margin="50,0,0,2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#4880ff"
                    Text="Employee Absence Details" />
                <Icon:PackIconMaterial
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="#4880ff"
                    Kind="AccountOutline" />

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,10,2"
                        Click="btnMinimize_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Minus" />
                    </Button>

                    <Button
                        x:Name="btnExit"
                        Margin="0,0,0,0"
                        Click="btnExit_Click"
                        Content="X"
                        FontSize="20"
                        Style="{StaticResource topButton}" />
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Background="#f2f5f8"
                    CornerRadius="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--  Header  -->
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Text="Employee Absence Details" />
                        <!--  Main content  -->
                        <ScrollViewer
                            Grid.Row="1"
                            Margin="0,40,0,0"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.ColumnSpan="2" Margin="10">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Grid.Column="0"
                                                Width="220"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="First Name:" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="0,0,0,10"
                                                FontSize="16"
                                                Text="{Binding FirstName}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Grid.Column="0"
                                                Width="220"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Last Name:" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="0,0,0,10"
                                                FontSize="16"
                                                Text="{Binding LastName}" />

                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Grid.Column="0"
                                                Width="220"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Date:" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="0,0,0,10"
                                                FontSize="16"
                                                Text="{Binding AbsenceDate}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Grid.Column="0"
                                                Width="220"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Justification:" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="0,0,0,10"
                                                FontSize="16"
                                                Text="{Binding Justification}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Grid.Column="0"
                                                Width="220"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Note:" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Height="100"
                                                Margin="0,0,0,10"
                                                FontSize="16"
                                                Text="{Binding Note}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                    </StackPanel>

                                </Grid>

                                <!--  Close Button and print  -->
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        Margin="0,40,20,0"
                                        Click="btnExit_Click"
                                        Content="Close"
                                        Style="{StaticResource SecondaryButton}">
                                        <Button.Effect>
                                            <DropShadowEffect
                                                BlurRadius="10"
                                                Direction="-120"
                                                Opacity="0.3"
                                                ShadowDepth="5"
                                                Color="#4880ff" />
                                        </Button.Effect>
                                    </Button>

                                    <Button
                                        Margin="0,40,20,0"
                                        Command="{Binding PrintAbsenceDetailCommand}"
                                        Content="Print"
                                        Style="{StaticResource mainButton}">
                                        <Button.Effect>
                                            <DropShadowEffect
                                                BlurRadius="10"
                                                Direction="-120"
                                                Opacity="0.3"
                                                ShadowDepth="5"
                                                Color="#4880ff" />
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>

                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
