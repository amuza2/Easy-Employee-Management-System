<Page
    x:Class="EEMS.UI.Views.Absences.AbsencePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Absences"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AbsencePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Page Title  -->

        <TextBlock
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="32"
            FontWeight="SemiBold"
            Foreground="#121518"
            Text="Absences" />

        <!--  Tab Button  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <Button
                BorderBrush="{StaticResource PrimaryColor}"
                Command="{Binding AllButtonCommand}"
                Content="All"
                Style="{StaticResource tabButton}" />
        </StackPanel>

        <!--  filter by name label  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,260,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="13"
            FontWeight="SemiBold"
            Foreground="#121517"
            Text="Filter by" />

        <!--  Filter Textbox  -->

        <UC:SearchTextBoxControl
            Grid.Row="1"
            Width="250"
            Margin="0,0,5,0"
            HorizontalAlignment="Right"
            PlaceholderText="Search Employee.." />

        <DatePicker
            Grid.Row="1"
            Width="200"
            Margin="0,0,50,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BorderBrush="LightGray"
            FontSize="14"
            Foreground="#868686"
            SelectedDate="{Binding SelectedDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            Text="{Binding ShownDate, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


        <!--  Separator  -->
        <Separator
            Grid.Row="2"
            Height="1"
            Margin="0,-1,0,10"
            Background="#dae2ea" />

        <!--  Employees Datagrid  -->
        <DataGrid
            x:Name="membersDataGrid"
            Grid.Row="3"
            CellStyle="{DynamicResource DataGridCellStyle1}"
            ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
            ItemsSource="{Binding Absences}"
            RowStyle="{DynamicResource DataGridRowStyle1}"
            SelectedItem="{Binding SelectedAbsence, Mode=TwoWay}"
            Style="{DynamicResource DataGridStyle1}">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ViewAbsenceCommand}" Header="View" />
                    <MenuItem Command="{Binding EditAbsenceCommand}" Header="Edit" />
                    <MenuItem Command="{Binding ArchiveAbsenceCommand}" Header="Archive" />
                    <MenuItem Command="{Binding DeleteAbsenceCommand}" Header="Delete" />
                    <MenuItem Command="{Binding PrintAbsenceCommand}" Header="Print" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding Id}"
                    CanUserResize="False"
                    Header="#"
                    IsReadOnly="True" />
                <DataGridTemplateColumn
                    Width="*"
                    Header=" Nom et Prenom"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="{Binding Employee.FirstName}" />
                                <TextBlock
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Employee.LastName}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Employee.JobTitle}"
                    CanUserResize="False"
                    Header="Position"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Employee.Email}"
                    CanUserResize="False"
                    Header="Email"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Employee.Phone}"
                    CanUserResize="False"
                    Header="Numero de telephone"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Employee.IsActive}"
                    CanUserResize="False"
                    Header="En travaille"
                    IsReadOnly="True" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
