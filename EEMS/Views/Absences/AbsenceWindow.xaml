<Window
    x:Class="EEMS.UI.Views.Absences.AbsenceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Absences"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Absence"
    Width="450"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        BorderBrush="#4880ff"
        BorderThickness="3"
        CornerRadius="22">

        <Border
            Background="#fff"
            CornerRadius="20"
            MouseDown="Border_MouseDown">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />

                </Grid.RowDefinitions>

                <TextBlock
                    Margin="50,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#4880ff"
                    Text="Absence" />
                <Icon:PackIconMaterial
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="#4880ff"
                    Kind="AccountOutline" />

                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,10,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="btnMinimize_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Minus" />
                    </Button>

                    <Button
                        x:Name="btnExit"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Click="btnExit_Click"
                        Content="X"
                        FontSize="20"
                        Style="{StaticResource topButton}" />
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Background="#f2f5f8"
                    CornerRadius="20">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="0,5"
                            VerticalAlignment="Center"
                            Text="First Name:" />
                        <TextBox
                            Name="FirstNameTextBox"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,5"
                            Padding="5"
                            IsEnabled="False"
                            Text="{Binding FirstName}" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5"
                            VerticalAlignment="Center"
                            Text="Last Name:" />
                        <TextBox
                            Name="LastNameTextBox"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,5"
                            Padding="5"
                            IsEnabled="False"
                            Text="{Binding LastName}" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="0,5"
                            VerticalAlignment="Center"
                            Text="Date of Absence:" />
                        <DatePicker
                            Name="AbsenceDatePicker"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,5"
                            Padding="5"
                            Background="#f2f5f8"
                            BorderBrush="LightGray"
                            Foreground="Black"
                            SelectedDate="{Binding SelectedDate, StringFormat='{}{0:MM/dd/yyyy}'}">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Control.Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DatePickerTextBox">
                                                <Border
                                                    Padding="2"
                                                    Background="#f2f5f8"
                                                    CornerRadius="3">
                                                    <ScrollViewer
                                                        x:Name="PART_ContentHost"
                                                        Focusable="False"
                                                        HorizontalScrollBarVisibility="Hidden"
                                                        VerticalScrollBarVisibility="Hidden" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>

                        <TextBlock
                            Grid.Row="3"
                            Margin="0,5"
                            VerticalAlignment="Center"
                            Text="Justification:" />
                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,5"
                            Orientation="Horizontal">
                            <RadioButton
                                Margin="0,0,10,0"
                                Content="Yes"
                                GroupName="JustificationGroup"
                                IsChecked="{Binding SelectedJustification, Converter={StaticResource BoolToRadioButtonConverter}, Mode=TwoWay}" />
                            <RadioButton
                                Content="No"
                                GroupName="JustificationGroup"
                                IsChecked="{Binding SelectedJustification, Converter={StaticResource InverseBoolToRadioButtonConverter}, Mode=TwoWay}" />
                        </StackPanel>

                        <TextBlock
                            Grid.Row="4"
                            Margin="0,10"
                            VerticalAlignment="Top"
                            Text="Justification Details:" />
                        <TextBox
                            Name="JustificationTextBox"
                            Grid.Row="4"
                            Grid.Column="1"
                            Height="120"
                            Margin="0,5"
                            Padding="5"
                            AcceptsReturn="True"
                            Text="{Binding JustificationDetail}"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Row="5"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                Name="CancelButton"
                                Width="100"
                                Margin="0,0,10,0"
                                Padding="5"
                                Click="CancelButton_Click"
                                Content="Cancel"
                                Style="{StaticResource SecondaryButton}">
                                <Button.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Direction="-120"
                                        Opacity="0.3"
                                        ShadowDepth="5"
                                        Color="#4880ff" />
                                </Button.Effect>
                            </Button>
                            <Button
                                Name="AddButton"
                                Width="100"
                                Margin="0,0,10,0"
                                Padding="5"
                                Command="{Binding SaveAbsenceCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Content="{Binding IsEdit, Converter={StaticResource BooleanToAddEditConverter}}"
                                Style="{StaticResource mainButton}">
                                <Button.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Direction="-120"
                                        Opacity="0.3"
                                        ShadowDepth="5"
                                        Color="#4880ff" />
                                </Button.Effect>
                            </Button>
                        </StackPanel>

                    </Grid>


                </Border>

            </Grid>

        </Border>
    </Border>
</Window>
