<UserControl
    x:Class="EEMS.UI.Views.Account.Newpassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Account"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="740"
    d:DesignWidth="450"
    mc:Ignorable="d">


    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <TextBlock
                Margin="0,35,0,672"
                HorizontalAlignment="Center"
                FontSize="23"
                FontWeight="Bold"
                Text="Set a new password" />
            <Image
                Height="250"
                Margin="0,80,0,410"
                Source="/Views/Account/Login-rafiki.png" />
            <TextBlock
                Margin="0,335,0,370"
                HorizontalAlignment="Center"
                FontSize="19"
                FontWeight="Regular"
                Text="Please enter a new password" />
            <TextBox
                Width="278"
                Height="47"
                Margin="110,410,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="#FFC8C8C8"
                FontSize="17"
                Text="New password"
                TextWrapping="Wrap" />
            <TextBox
                Width="278"
                Height="47"
                Margin="110,481,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="#FFC8C8C8"
                FontSize="17"
                Foreground="DimGray"
                Text="Repeat password"
                TextWrapping="Wrap" />
            <Button
                Width="230"
                Height="43"
                Margin="0,562,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#4880ff"
                BorderBrush="#FF4880FF"
                Content="New password"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="White"
                RenderTransformOrigin="-0.519,-0.763" />
            <Image
                Width="42"
                Height="46"
                Margin="56,482,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/UserControls/padlock.png" />
            <Image
                Width="42"
                Height="46"
                Margin="56,412,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/UserControls/padlock.png" />
        </Grid>
    </Border>
</UserControl>
