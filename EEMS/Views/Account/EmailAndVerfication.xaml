<UserControl
    x:Class="EEMS.UI.Views.Account.EmailAndVerfication"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Account"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="740"
    d:DesignWidth="450"
    mc:Ignorable="d">
    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <TextBlock
                Margin="0,34,0,673"
                HorizontalAlignment="Center"
                FontSize="23"
                FontWeight="Bold"
                Text="Email Verification" />
            <Image
                Height="250"
                Margin="0,80,0,410"
                Source="/UserControls/Email campaign-rafiki.png" />
            <TextBlock
                Margin="0,335,0,370"
                HorizontalAlignment="Center"
                FontSize="19"
                FontWeight="Regular"
                Text="Please enter your email address to receive" />
            <TextBlock
                Margin="0,359,0,346"
                HorizontalAlignment="Center"
                FontSize="19"
                FontWeight="Regular"
                Text="the verification code" />
            <TextBox
                Width="278"
                Height="47"
                Margin="110,410,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="#FFC8C8C8"
                FontSize="17"
                Text="Email"
                TextWrapping="Wrap" />
            <TextBox
                Width="278"
                Height="47"
                Margin="110,548,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="#FFC8C8C8"
                FontSize="17"
                Foreground="DimGray"
                Text="Enter Verficiation code"
                TextWrapping="Wrap" />
            <Button
                Width="230"
                Height="43"
                Margin="0,616,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#4880ff"
                BorderBrush="#FF4880FF"
                Content="Verfiy"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="White"
                RenderTransformOrigin="-0.519,-0.763" />
            <Button
                Width="186"
                Height="23"
                Margin="0,674,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Transparent"
                Content="Sign in"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="DimGray"
                RenderTransformOrigin="-0.519,-0.763" />
            <Button
                Width="230"
                Height="43"
                Margin="0,480,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#4880ff"
                BorderBrush="#FF4880FF"
                Content="Send code"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="White"
                RenderTransformOrigin="-0.519,-0.763" />
            <Image
                Width="52"
                Height="49"
                Margin="48,410,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/UserControls/email.png" />
            <Image
                Width="52"
                Height="49"
                Margin="48,548,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/UserControls/password.png" />
        </Grid>
    </Border>


</UserControl>
