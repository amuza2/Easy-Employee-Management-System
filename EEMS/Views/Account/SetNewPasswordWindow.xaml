<Window
    x:Class="EEMS.UI.Views.Account.SetNewPasswordWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Account"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SetNewPasswordWindow"
    Width="450"
    Height="550"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        BorderBrush="#4880ff"
        BorderThickness="3"
        CornerRadius="22">

        <Border Background="#fff" CornerRadius="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="50,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#4880ff"
                    Text="Set New Password" />
                <Icon:PackIconMaterial
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="#4880ff"
                    Kind="AccountOutline" />

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,10,2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="btnMinimize_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="WindowMinimize" />
                    </Button>

                    <Button
                        x:Name="btnExit"
                        Margin="0,0,0,0"
                        VerticalAlignment="Top"
                        Click="btnExit_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="WindowClose" />
                    </Button>
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Background="#f2f5f8"
                    CornerRadius="20">

                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <Image Height="250" Source="/Resources/Images/Sign in-pana.png" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="22"
                            FontWeight="Bold"
                            Text="Please Enter a New Password" />
                        <TextBox
                            Width="278"
                            Height="47"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#FFC8C8C8"
                            FontSize="17"
                            Foreground="DimGray"
                            Text="New password"
                            TextWrapping="Wrap" />
                        <TextBox
                            Width="278"
                            Height="47"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderBrush="#FFC8C8C8"
                            FontSize="17"
                            Foreground="DimGray"
                            Text="Repeat password"
                            TextWrapping="Wrap" />
                        <Button
                            Width="230"
                            Height="43"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Content="New Password"
                            FontSize="16"
                            FontWeight="DemiBold"
                            Foreground="White"
                            Style="{StaticResource mainButton}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>

</Window>
