<Window
    x:Class="EEMS.UI.Views.Account.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:VM="clr-namespace:EEMS.UI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Account"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Employee Management System"
    Width="900"
    Height="600"
    d:DataContext="{d:DesignInstance Type=VM:LoginWindowViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="#f2f5f8"
        BorderBrush="#EDF2F7"
        CornerRadius="24"
        MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="450" />
            </Grid.ColumnDefinitions>

            <!--  Left Side - Branding & Illustration  -->
            <Grid Grid.Column="0" Background="#3B82F6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Logo Area  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="40,30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Icon:PackIconMaterial
                        Width="32"
                        Height="32"
                        Foreground="White"
                        Kind="ShieldAccount" />
                    <TextBlock
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="EEMS" />
                </StackPanel>

                <!--  Center Content  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="40,0,40,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontFamily="Segoe UI"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Easy Employee Management System"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,20,0,40"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Regular"
                        Foreground="#DBEAFE"
                        LineHeight="24"
                        Text="Streamline your workflow and manage your team efficiently with our powerful employee management platform."
                        TextWrapping="Wrap" />

                    <Image
                        Width="320"
                        Height="280"
                        Source="/Resources/Images/Login-rafiki.png"
                        Stretch="Uniform" />
                </StackPanel>

                <!--  Footer  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="40,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="12"
                    Foreground="#DBEAFE"
                    Text="© 2025 EEMS. All rights reserved." />
            </Grid>

            <!--  Right Side - Login Form  -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Window Controls  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,20,20,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,8,0"
                        Click="btnMinimize_Click"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial
                            Width="14"
                            Height="14"
                            Kind="WindowMinimize" />
                    </Button>
                    <Button
                        x:Name="btnExit"
                        Click="btnExit_Click"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial
                            Width="14"
                            Height="14"
                            Kind="Close" />
                    </Button>
                </StackPanel>

                <!--  Login Form  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="50,0,50,40"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontFamily="Segoe UI"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#1E293B"
                        Text="Welcome back" />
                    <TextBlock
                        Margin="0,8,0,40"
                        FontFamily="Segoe UI"
                        FontSize="15"
                        Foreground="#64748B"
                        Text="Sign in to your account to continue" />

                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Foreground="#868686"
                            Text="Username:" />
                        <TextBox
                            Width="340"
                            Height="30"
                            Margin="0,0,0,20"
                            HorizontalAlignment="Left"
                            materialDesign:HintAssist.Hint="Username"
                            FontSize="14"
                            Text="{Binding Account.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="Padding" Value="15,0,0,0" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock
                            FontSize="14"
                            Foreground="#868686"
                            Text="Password:" />
                        <PasswordBox
                            Width="340"
                            Height="30"
                            Margin="0,0,0,20"
                            HorizontalAlignment="Left"
                            materialDesign:HintAssist.Hint="Password"
                            materialDesign:PasswordBoxAssist.Password="{Binding Account.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FontSize="14"
                            PasswordChar="●">
                            <PasswordBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="Padding" Value="15,0,0,0" />
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>
                    </StackPanel>

                    <CheckBox
                        Margin="0,0,0,24"
                        HorizontalAlignment="Left"
                        Content="Remember me"
                        FontSize="14"
                        Foreground="#64748B"
                        IsChecked="{Binding Account.RememberMe}" />

                    <!--  Login Button with Loading Animation  -->
                    <Button
                        Command="{Binding LoginCommand}"
                        Content="Log In"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Style="{StaticResource mainButton}" />

                    <!--  Create Account Link  -->
                    <TextBlock
                        Margin="0,24,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14">
                        <Run Foreground="#64748B" Text="Don't have an account?" />
                        <Hyperlink Command="{Binding CreateAccountCommand}" TextDecorations="None">
                            <Run Foreground="#3B82F6" Text="Create an account" />
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>