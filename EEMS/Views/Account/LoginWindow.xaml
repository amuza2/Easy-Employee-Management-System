<Window
    x:Class="EEMS.UI.Views.Account.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Account"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="450"
    Height="740"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="#eff2f7" CornerRadius="30">
        <Grid>
            <Image
                Height="250"
                Margin="0,58,0,432"
                Source="/Views/Account/Sign in-pana.png" />
            <TextBlock
                Margin="0,323,0,370"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="Welcome Back !" />
            <TextBox
                Width="278"
                Height="47"
                Margin="0,404,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="#FFC8C8C8"
                FontSize="17"
                Text="Enter username"
                TextWrapping="Wrap" />
            <TextBox
                Width="278"
                Height="47"
                Margin="0,478,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="#FFC8C8C8"
                FontSize="17"
                Text="Enter password"
                TextWrapping="Wrap" />
            <Button
                Width="278"
                Height="43"
                Margin="0,552,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#4880ff"
                BorderBrush="#FF4880FF"
                Content="LOG IN"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="White"
                RenderTransformOrigin="-0.519,-0.763" />
            <Button
                Width="186"
                Height="23"
                Margin="0,610,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Transparent"
                Content="Create a new account"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="DimGray"
                RenderTransformOrigin="-0.519,-0.763" />
            <Button
                Width="394"
                Height="29"
                Margin="0,641,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Transparent"
                Content="I've already have an account and forgot my password"
                FontSize="16"
                FontWeight="DemiBold"
                Foreground="#4880ff"
                RenderTransformOrigin="-0.519,-0.763" />

        </Grid>
    </Border>

</Window>
