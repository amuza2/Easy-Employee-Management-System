<Window
    x:Class="EEMS.UI.Views.Account.SignUpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:VM="clr-namespace:EEMS.UI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Account"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Employee Management System"
    Width="900"
    Height="650"
    d:DataContext="{d:DesignInstance Type=VM:SignUpWindowViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="#f2f5f8"
        BorderBrush="#EDF2F7"
        CornerRadius="24"
        MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Side - Registration Form  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Window Controls  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="20,20,0,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,8,0"
                        Click="btnMinimize_Click"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial
                            Width="14"
                            Height="14"
                            Kind="WindowMinimize" />
                    </Button>
                    <Button
                        x:Name="btnExit"
                        Click="btnExit_Click"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial
                            Width="14"
                            Height="14"
                            Kind="Close" />
                    </Button>
                </StackPanel>

                <!--  Registration Form  -->
                <StackPanel
                    Grid.Row="1"
                    Width="340"
                    Margin="50,0,50,30"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontFamily="Segoe UI"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#1E293B"
                        Text="Create Account" />
                    <TextBlock
                        Margin="0,8,0,30"
                        FontFamily="Segoe UI"
                        FontSize="15"
                        Foreground="#64748B"
                        Text="Sign up to get started with EEMS" />

                    <!--  Username  -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock
                            FontSize="14"
                            Foreground="#868686"
                            Text="Username:" />
                        <TextBox
                            Height="40"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="Choose a username"
                            FontSize="14"
                            Text="{Binding Account.Username}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="Padding" Value="15,0,0,0" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!--  Email  -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock
                            FontSize="14"
                            Foreground="#868686"
                            Text="Email:" />
                        <TextBox
                            Height="40"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="Enter your email address"
                            FontSize="14"
                            Text="{Binding Account.Email}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="Padding" Value="15,0,0,0" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!--  Password  -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock
                            FontSize="14"
                            Foreground="#868686"
                            Text="Password:" />
                        <PasswordBox
                            x:Name="passwordBox"
                            Height="40"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="Create a password"
                            materialDesign:PasswordBoxAssist.Password="{Binding Account.Password}"
                            FontSize="14"
                            PasswordChar="●">
                            <PasswordBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="Padding" Value="15,0,0,0" />
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>
                    </StackPanel>

                    <!--  Confirm Password  -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock
                            FontSize="14"
                            Foreground="#868686"
                            Text="Confirm Password:" />
                        <PasswordBox
                            x:Name="confirmPasswordBox"
                            Height="40"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="Confirm your password"
                            materialDesign:PasswordBoxAssist.Password="{Binding Account.ConfirmPassword}"
                            FontSize="14"
                            PasswordChar="●">
                            <PasswordBox.Resources>
                                <Style TargetType="{x:Type materialDesign:SmartHint}">
                                    <Setter Property="Padding" Value="15,0,0,0" />
                                </Style>
                            </PasswordBox.Resources>
                        </PasswordBox>
                    </StackPanel>

                    <!--  Sign Up Button  -->
                    <Button
                        Height="45"
                        Command="{Binding SignUpCommand}"
                        Content="Create Account"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Style="{StaticResource mainButton}" />

                    <!--  Login Link  -->
                    <TextBlock
                        Margin="0,24,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14">
                        <Run Foreground="#64748B" Text="Already have an account?" />
                        <Run
                            Cursor="Hand"
                            Foreground="#3B82F6"
                            Text="Sign in">
                            <Run.InputBindings>
                                <MouseBinding Command="{Binding NavigateToLoginCommand}" MouseAction="LeftClick" />
                            </Run.InputBindings>
                        </Run>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!--  Right Side - Branding & Illustration  -->
            <Grid Grid.Column="1" Background="#3B82F6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Logo Area  -->
                <StackPanel
                    Grid.Row="0"
                    Margin="40,30,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Icon:PackIconMaterial
                        Width="32"
                        Height="32"
                        Foreground="White"
                        Kind="ShieldAccount" />
                    <TextBlock
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="EEMS" />
                </StackPanel>

                <!--  Center Content  -->
                <StackPanel
                    Grid.Row="1"
                    Margin="40,0,40,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontFamily="Segoe UI"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Easy Employee Management System"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,20,0,40"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Regular"
                        Foreground="#DBEAFE"
                        LineHeight="24"
                        Text="Join our platform today to simplify employee management, track performance, and streamline your HR processes."
                        TextWrapping="Wrap" />

                    <Image
                        Width="320"
                        Height="280"
                        Source="/Resources/Images/Sign-in-pana.png"
                        Stretch="Uniform" />
                </StackPanel>

                <!--  Footer  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="40,0,0,20"
                    FontFamily="Segoe UI"
                    FontSize="12"
                    Foreground="#DBEAFE"
                    Text="© 2025 EEMS. All rights reserved." />
            </Grid>
        </Grid>
    </Border>
</Window>