<Window
    x:Class="EEMS.UI.Views.Condidates.AddAndEditCondidateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Condidates"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:EEMS.UI.ViewModels"
    Title="AddAndEditCandidateWindow"
    Width="1150"
    Height="750"
    AllowsTransparency="True"
    Background="Transparent"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="#fff"
        CornerRadius="10"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  window title  -->
            <TextBlock
                Margin="50,0,0,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#4880ff"
                Text="Add New Candidate Form" />
            <Icon:PackIconMaterial
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="#4880ff"
                Kind="AccountSearchOutline" />

            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnMinimize"
                    Margin="0,0,10,2"
                    Click="btnMinimize_Click"
                    FontSize="20"
                    Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Minus" />
                </Button>

                <Button
                    x:Name="btnExit"
                    Margin="0,0,0,0"
                    Click="btnExit_Click"
                    Content="X"
                    FontSize="20"
                    Style="{StaticResource topButton}" />
            </StackPanel>

            <!--  Right section  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Background="#4880ff"
                CornerRadius="0 0 5 0">
                <StackPanel Margin="60,0,10,0">
                    <Grid
                        Width="80"
                        Height="80"
                        Margin="0,20,0,0">
                        <Border Background="#fff" CornerRadius="40" />
                        <Icon:PackIconMaterial
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#4880ff"
                            Kind="AccountSearchOutline" />
                    </Grid>

                    <TextBlock
                        Margin="40,5,40,20"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="#fff"
                        Text="Candidate Information"
                        TextAlignment="Center" />

                    <UC:CardUserControl
                        Title="Personal Information"
                        Number="1"
                        Time="3 min" />
                    <UC:CardUserControl
                        Title="Family Information"
                        Number="2"
                        Time="2 min" />
                    <UC:CardUserControl
                        Title="Document Information"
                        Number="3"
                        Time="2 min" />
                    <UC:CardUserControl
                        Title="National Service"
                        Number="4"
                        Time="1 min" />
                    <UC:CardUserControl
                        Title="Job Information"
                        Number="5"
                        Time="1 min" />

                </StackPanel>
            </Border>

            <!--  Left Section  -->
            <Border
                Grid.Row="1"
                Background="#f2f5f8"
                CornerRadius="0 0 0 5">
                <Grid Margin="70,40,-60,30" VerticalAlignment="Center">

                    <!--  Background layers  -->
                    <Border
                        Height="50"
                        Margin="40,-30,60,0"
                        VerticalAlignment="Top"
                        Background="#f7f8fb"
                        CornerRadius="7 0 0 0" />
                    <Border
                        Height="50"
                        Margin="20,-15,60,0"
                        VerticalAlignment="Top"
                        Background="#f7f8fb"
                        CornerRadius="7 0 0 0" />

                    <!--  Main Layer  -->
                    <Border Background="#fff" CornerRadius="7">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="30"
                                Direction="-150"
                                Opacity="0.1"
                                ShadowDepth="5" />
                        </Border.Effect>

                        <Grid Margin="20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Form Content  -->
                            <ScrollViewer Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <!--  Personal Information Section  -->
                                        <StackPanel
                                            Grid.ColumnSpan="2"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="FaceManProfile" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="Personal Information" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />

                                        <!--  Personal Information Fields - Left Column  -->
                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="First Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="First Name"
                                                Text="{Binding FirstName}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Last Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Last Name"
                                                Text="{Binding LastName}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Phone:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Phone"
                                                Text="{Binding Phone}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="5" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Address:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Address"
                                                Text="{Binding Address}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="6" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Gender:" />
                                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                <RadioButton
                                                    Content="Male"
                                                    Foreground="#868686"
                                                    GroupName="GenderGroupName"
                                                    IsChecked="{Binding SelectedGender, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Male}" />
                                                <RadioButton
                                                    Margin="140,0,0,0"
                                                    Content="Female"
                                                    Foreground="#868686"
                                                    GroupName="GenderGroupName"
                                                    IsChecked="{Binding SelectedGender, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Female}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Row="7" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Residence:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your residence"
                                                Text="{Binding Residence}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <!--  Personal Information Fields - Right Column  -->
                                        <StackPanel Grid.Row="2" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Email:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Email"
                                                Text="{Binding Email}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Date of Birth:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding DateOfBirth, Mode=TwoWay}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Birth Location:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your birth location"
                                                Text="{Binding BirthLocation}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="5" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Family Situation:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select your family situation"
                                                ItemsSource="{Binding FamilySituationItems}"
                                                SelectedItem="{Binding SelectedFamilySituation}">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="6" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Blood Group:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select your blood group"
                                                ItemsSource="{Binding BloodGroupItems}"
                                                SelectedItem="{Binding SelectedBloodGroup}">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="7" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Driving License:" />
                                            <CheckBox
                                                Margin="0,5,0,20"
                                                Content="Has driving license"
                                                IsChecked="{Binding HasDrvinglicense}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="8" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="MS Office Knowledge:" />
                                            <CheckBox
                                                Margin="0,5,0,20"
                                                Content="Knows Microsoft Office"
                                                IsChecked="{Binding KnowMicrosoftOfficeSoftware}" />
                                        </StackPanel>

                                        <!--  Family Information Section  -->
                                        <StackPanel
                                            Grid.Row="9"
                                            Grid.ColumnSpan="2"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="FamilyTree" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="Family Information" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="10"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />

                                        <!--  Family Information Fields  -->
                                        <StackPanel Grid.Row="11" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Father's Full Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter father's full name"
                                                Text="{Binding FatherFullName}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="12" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Father's Job:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter father's job"
                                                Text="{Binding FatherJob}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="13" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Number of Brothers and Sisters:" />
                                            <materialDesign:NumericUpDown
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                Value="{Binding NumberOfBrothersAndSisters, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="11" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Mother's Full Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter mother's full name"
                                                Text="{Binding MotherFullName}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="12" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Mother's Job:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter mother's job"
                                                Text="{Binding MotherJob}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="13" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Husband's Full Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter husband's full name (if applicable)"
                                                Text="{Binding HusbandFullname}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="14" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Husband's Job:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter husband's job (if applicable)"
                                                Text="{Binding HusbandJob}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <!--  Document Information Section  -->
                                        <StackPanel
                                            Grid.Row="15"
                                            Grid.ColumnSpan="2"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="FileDocumentOutline" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="Document Information" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="16"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />

                                        <!--  Document Information Fields  -->
                                        <StackPanel Grid.Row="17" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Bank Account Number:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter bank account number"
                                                Text="{Binding BankAccountNumber}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="18" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Social Security Number:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter social security number"
                                                Text="{Binding SocialSecurityNumber}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="17" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="National Card Number:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter national card number"
                                                Text="{Binding NationalCardNumber}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="18" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="National Card Release Date:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding NationalCardNumberReleaseDate, Mode=TwoWay}" />
                                        </StackPanel>

                                        <!--  National Service Section  -->
                                        <StackPanel
                                            Grid.Row="19"
                                            Grid.ColumnSpan="2"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="MapMarkerRadius" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="National Service" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="20"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />

                                        <!--  National Service Fields  -->
                                        <StackPanel Grid.Row="21" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Cleared from National Service:" />
                                            <CheckBox
                                                Margin="0,5,0,20"
                                                Content="Cleared"
                                                IsChecked="{Binding ClearedFromNationalService}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="21" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Suitable but Not Incorporated:" />
                                            <CheckBox
                                                Margin="0,5,0,20"
                                                Content="Suitable but Not Incorporated"
                                                IsChecked="{Binding NationalServiceSuitableNotIncorporated}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="22" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="National Service Suspended From:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding NationalServiceDateSuspendedFrom, Mode=TwoWay}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="22" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="National Service Suspended To:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding NationalServiceDateSuspendedTo, Mode=TwoWay}" />
                                        </StackPanel>

                                        <!--  Job Information Section  -->
                                        <StackPanel
                                            Grid.Row="23"
                                            Grid.ColumnSpan="2"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="BriefcaseOutline" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="Job Information" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="24"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />

                                        <!--  Job Information Fields  -->
                                        <StackPanel Grid.Row="25" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Interview Date:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding InterviewDate, Mode=TwoWay}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="26" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Essential Training:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter essential training"
                                                Text="{Binding EssentialTraining, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="27" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Training:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter training information"
                                                Text="{Binding Training, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="25" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Languages Spoken:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter languages spoken"
                                                Text="{Binding LanguagesSpoken, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="26" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Experience (Years):" />
                                            <materialDesign:NumericUpDown
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                Value="{Binding Experience, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="27" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Job Nature:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select job nature"
                                                ItemsSource="{Binding JobNatureItems}"
                                                SelectedItem="{Binding SelectedJobNature, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="28" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Opened Job:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select opened job"
                                                DisplayMemberPath="Name"
                                                ItemsSource="{Binding OpenedJobItems}"
                                                SelectedItem="{Binding SelectedOpenedJob, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <!--  Form Bottom Background  -->
                                        <Border
                                            Grid.Row="29"
                                            Grid.ColumnSpan="2"
                                            Height="80"
                                            Margin="-20,40,-20,0"
                                            Background="#f6f6f6"
                                            CornerRadius="0 0 10 10" />

                                        <!--  Main button  -->
                                        <Button
                                            Grid.Row="29"
                                            Grid.Column="1"
                                            Margin="0,40,20,0"
                                            HorizontalAlignment="Right"
                                            Command="{Binding SaveCandidateCommand}"
                                            Content="{Binding ButtonName}"
                                            Style="{StaticResource mainButton}">
                                            <Button.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Direction="-120"
                                                    Opacity="0.3"
                                                    ShadowDepth="5"
                                                    Color="#4880ff" />
                                            </Button.Effect>
                                        </Button>

                                        <!--  Secondary button  -->
                                        <Button
                                            Grid.Row="29"
                                            Width="150"
                                            Margin="20,40,0,0"
                                            HorizontalAlignment="Left"
                                            Click="CloseButton_Click"
                                            Content="Close"
                                            Style="{StaticResource SecondaryButton}" />
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>