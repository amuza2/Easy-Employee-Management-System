<Window
    x:Class="EEMS.UI.Views.Employees.AddAndEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS.UI.Views.Employees"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:EEMS.UI.ViewModels"
    Title="AddAndEditWindow"
    Width="1150"
    Height="750"
    d:DataContext="{d:DesignInstance Type=vm:AddAndEditWindowViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="#fff"
        CornerRadius="10"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  exit window  -->

            <TextBlock
                Margin="50,0,0,2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="#4880ff"
                Text="Add New Employee Form" />
            <Icon:PackIconMaterial
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="#4880ff"
                Kind="AccountOutline" />

            <StackPanel
                Grid.Column="1"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnMinimize"
                    Margin="0,0,10,2"
                    Click="btnMinimize_Click"
                    FontSize="20"
                    Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Minus" />
                </Button>

                <Button
                    x:Name="btnExit"
                    Margin="0,0,0,0"
                    Click="btnExit_Click"
                    Content="X"
                    FontSize="20"
                    Style="{StaticResource topButton}" />
            </StackPanel>

            <!--  Right section  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Background="#4880ff"
                CornerRadius="0 0 5 0">
                <StackPanel Margin="60,0,10,0">
                    <Grid
                        Width="80"
                        Height="80"
                        Margin="0,20,0,0">
                        <Border Background="#fff" CornerRadius="40" />
                        <Icon:PackIconMaterial
                            Width="40"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="#4880ff"
                            Kind="Account" />
                    </Grid>

                    <TextBlock
                        Margin="40,5,40,20"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="#fff"
                        Text="Employee Informations"
                        TextAlignment="Center" />

                    <UC:CardUserControl
                        Title="Personel Information"
                        Number="1"
                        Time="3 min" />
                    <UC:CardUserControl
                        Title="Job Information"
                        Number="2"
                        Time="2 min" />

                </StackPanel>
            </Border>

            <!--  Left Section  -->
            <Border
                Grid.Row="1"
                Background="#f2f5f8"
                CornerRadius="0 0 0 5">
                <Grid Margin="70,40,-60,30" VerticalAlignment="Center">

                    <!--  Background layers  -->
                    <Border
                        Height="50"
                        Margin="40,-30,60,0"
                        VerticalAlignment="Top"
                        Background="#f7f8fb"
                        CornerRadius="7 0 0 0" />
                    <Border
                        Height="50"
                        Margin="20,-15,60,0"
                        VerticalAlignment="Top"
                        Background="#f7f8fb"
                        CornerRadius="7 0 0 0" />

                    <!--  Main Layer  -->
                    <Border Background="#fff" CornerRadius="7">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="30"
                                Direction="-150"
                                Opacity="0.1"
                                ShadowDepth="5" />
                        </Border.Effect>

                        <Grid Margin="20,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Form Title  -->
                            <ScrollViewer Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
                                <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.ColumnSpan="2"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="FaceManProfile" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="Personal Informations" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />



                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="First Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="First Name"
                                                Text="{Binding Employee.FirstName}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="3" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Last Name:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Last Name"
                                                Text="{Binding Employee.LastName}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Phone:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Phone"
                                                Text="{Binding Employee.Phone}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="5" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Address:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Address"
                                                Text="{Binding Employee.Address}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="6" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Gender" />
                                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                <RadioButton
                                                    Content="Male"
                                                    Foreground="#868686"
                                                    GroupName="GenderGroupName"
                                                    IsChecked="{Binding Employee.Gender, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Male}" />
                                                <RadioButton
                                                    Margin="140,0,0,0"
                                                    Content="Female"
                                                    Foreground="#868686"
                                                    GroupName="GenderGroupName"
                                                    IsChecked="{Binding Employee.Gender, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Female}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Email:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Email"
                                                Text="{Binding Employee.Email}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>


                                        <StackPanel Grid.Row="3" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Date of Birth:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding Employee.DateOfBirth, Mode=TwoWay}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="4" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Birth Location:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your birth location"
                                                Text="{Binding Employee.BirthLocation}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="5" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Family Situation:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select your family situation"
                                                ItemsSource="{Binding FamilySituationItems}"
                                                SelectedItem="{Binding Employee.FamilySituation}">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="6" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Residence:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your residence"
                                                Text="{Binding Employee.Residence}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="7"
                                            Margin="20,20,0,0"
                                            Orientation="Horizontal">
                                            <Grid Width="50" Height="50">
                                                <Border
                                                    BorderBrush="#efefef"
                                                    BorderThickness="1.5"
                                                    CornerRadius="50" />
                                                <Icon:PackIconMaterial
                                                    Width="40"
                                                    Height="40"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="#c2ddfc"
                                                    Kind="FaceManProfile" />
                                            </Grid>
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                Foreground="#374655"
                                                Text="Job Informations" />
                                        </StackPanel>

                                        <Separator
                                            Grid.Row="8"
                                            Grid.ColumnSpan="2"
                                            Height="0.7"
                                            Margin="-20,20"
                                            Background="#e1e6eb" />

                                        <StackPanel Grid.Row="9" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Job Title:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your job title"
                                                Text="{Binding Employee.JobTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="10" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Essential Training:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your job essential training"
                                                Text="{Binding Employee.EssentialTraining, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="11" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Other Training:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your other training"
                                                Text="{Binding Employee.Training, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="12" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Languages Spoken:" />
                                            <TextBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Enter your language spoken"
                                                Text="{Binding Employee.LanguagesSpoken, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </TextBox.Resources>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="13" Grid.Column="0">
                                            <TextBlock Foreground="#868686" Text="Experience" />
                                            <materialDesign:NumericUpDown
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                Value="{Binding Employee.Experience, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>

                                        <!--  column 2 side  -->
                                        <StackPanel Grid.Row="9" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Department:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select your department"
                                                DisplayMemberPath="Name"
                                                ItemsSource="{Binding DepartmentItems}"
                                                SelectedValue="{Binding Employee.DepartmentId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                SelectedValuePath="Id">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="10" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Job Nature:" />
                                            <ComboBox
                                                Width="250"
                                                Height="30"
                                                Margin="0,0,0,20"
                                                HorizontalAlignment="Left"
                                                materialDesign:HintAssist.Hint="Select your job nature"
                                                ItemsSource="{Binding JobNatureItems}"
                                                SelectedItem="{Binding Employee.JobNatureItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                <ComboBox.Resources>
                                                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                                                        <Setter Property="Padding" Value="15,0,0,0" />
                                                    </Style>
                                                </ComboBox.Resources>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="11" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Recruitment Date:" />
                                            <DatePicker
                                                Width="250"
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding Employee.RecruitmentDate, Mode=TwoWay}" />
                                        </StackPanel>

                                        <StackPanel Grid.Row="12" Grid.Column="1">
                                            <TextBlock Foreground="#868686" Text="Status" />
                                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                                <RadioButton
                                                    Content="Active"
                                                    Foreground="#868686"
                                                    GroupName="StatusGroupName"
                                                    IsChecked="{Binding Employee.IsActive, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Active}" />
                                                <RadioButton
                                                    Margin="140,0,0,0"
                                                    Content="Inactive"
                                                    Foreground="#868686"
                                                    GroupName="StatusGroupName"
                                                    IsChecked="{Binding Employee.IsActive, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Inactive}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Form Bottom Background  -->
                                        <Border
                                            Grid.Row="14"
                                            Grid.ColumnSpan="2"
                                            Height="80"
                                            Margin="-20,40,-20,0"
                                            Background="#f6f6f6"
                                            CornerRadius="0 0 10 10" />

                                        <!--  Main button  -->
                                        <Button
                                            Grid.Row="14"
                                            Grid.Column="1"
                                            Margin="0,40,20,0"
                                            HorizontalAlignment="Right"
                                            Command="{Binding SaveEmployeeCommand}"
                                            Content="{Binding ButtonName}"
                                            Style="{StaticResource mainButton}">
                                            <Button.Effect>
                                                <DropShadowEffect
                                                    BlurRadius="10"
                                                    Direction="-120"
                                                    Opacity="0.3"
                                                    ShadowDepth="5"
                                                    Color="#4880ff" />
                                            </Button.Effect>
                                        </Button>

                                        <!--  Secondary button  -->
                                        <Button
                                            Grid.Row="14"
                                            Width="150"
                                            Margin="20,40,0,0"
                                            HorizontalAlignment="Left"
                                            Click="CloseButton_Click"
                                            Content="Close"
                                            Style="{StaticResource SecondaryButton}" />
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
