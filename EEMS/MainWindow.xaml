<Window
    x:Class="EEMS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:UC="clr-namespace:EEMS.UI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EEMS"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:page="clr-namespace:EEMS.UI.Views.Employees"
    Title="MainWindow"
    Width="1200"
    Height="800"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Storyboard x:Key="ExpandMenuStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="Sidebar"
                Storyboard.TargetProperty="Width"
                To="200"
                Duration="0:0:0.2" />
        </Storyboard>

        <Storyboard x:Key="CollapseMenuStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="Sidebar"
                Storyboard.TargetProperty="Width"
                To="50"
                Duration="0:0:0.2" />
        </Storyboard>
    </Window.Resources>


    <Border
        Background="#eff2f7"
        CornerRadius="30"
        MouseDown="Border_MouseDown"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid Margin="0,4,0,-4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding MenuWidth}" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Menu  -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Manu Icon  -->
                <Button
                    Margin="20,28,0,35"
                    Command="{Binding ToggleMenuCommand}"
                    Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial
                        Width="15"
                        Height="15"
                        Kind="Menu" />
                </Button>

                <Border
                    x:Name="Sidebar"
                    Grid.Row="1"
                    Width="{Binding MenuWidth}"
                    Margin="0,6,0,-6"
                    Background="#4880ff"
                    CornerRadius="0 50 0 30">
                    <DockPanel>
                        <!--  Manu Titles  -->
                        <TextBlock
                            Height="29"
                            Margin="25,25,0,10"
                            DockPanel.Dock="Top"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{Binding SetColor}"
                            Text="Company Name"
                            TextAlignment="Left" />
                        <TextBlock
                            Margin="25,25,0,10"
                            DockPanel.Dock="Top"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{Binding SetColor}"
                            Text="Bousmail"
                            TextAlignment="Left" />

                        <!--  Menu Separator  -->
                        <Separator
                            Height="0.8"
                            Margin="25"
                            Background="{Binding SeparatorColor}"
                            DockPanel.Dock="Top" />

                        <!--  Manu Button  -->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Command="{Binding NavigateToDashboardPageCommand}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource menuButton}" TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActivePage}" Value="Dashboard">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                FillBehavior="HoldEnd"
                                                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                                To="#6895ff"
                                                                Duration="0:0:0.3" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                FillBehavior="HoldEnd"
                                                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                                To="Transparent"
                                                                Duration="0:0:0.3" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Background>
                                    <SolidColorBrush Color="Transparent" />
                                </Button.Background>

                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Dashboard" Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding NavigateToEmployeePageCommand}">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource menuButton}" TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActivePage}" Value="Employee">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                FillBehavior="HoldEnd"
                                                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                                To="#6895ff"
                                                                Duration="0:0:0.3" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation
                                                                FillBehavior="HoldEnd"
                                                                Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                                To="Transparent"
                                                                Duration="0:0:0.3" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Background>
                                    <SolidColorBrush Color="Transparent" />
                                </Button.Background>

                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountMultipleOutline" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Employee" Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ForumOutline" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Condidates" Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Button>

                            <!--<Button Command="{Binding NavigateToEmployeePageCommand}">
                            <Button.Style>
                            <Style BasedOn="{StaticResource menuButton}" TargetType="Button">
                            <Style.Triggers>
                            <DataTrigger Binding="{Binding ActivePage}" Value="Employee">
                            <Setter Property="Background" Value="#6895ff" />
                            <Setter Property="Foreground" Value="White" />
                            </DataTrigger>
                            </Style.Triggers>
                            </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="AccountMultipleOutline" Style="{StaticResource menuButtonIcon}" />
                            <TextBlock Text="Employees" Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                            </Button>-->



                        </StackPanel>

                        <Button
                            Margin="0,0,0,20"
                            VerticalAlignment="Bottom"
                            DockPanel.Dock="Bottom"
                            Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}" />
                                <TextBlock Text="Logout" Visibility="{Binding IsMenuExpanded, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </Border>

            </Grid>

            <!--  Main Section  -->
            <Grid Grid.Column="1" Margin="10,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  exit window  -->
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        x:Name="btnMinimize"
                        Margin="0,0,10,0"
                        Click="btnMinimize_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Minus" />
                    </Button>

                    <Button
                        x:Name="btnExit"
                        Click="btnExit_Click"
                        FontSize="20"
                        Style="{StaticResource topButton}">
                        <Icon:PackIconMaterial Kind="Xamarin" />
                    </Button>
                </StackPanel>

                <!--  Top Buttons  -->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <UC:NotificationButtonControl />
                    <UC:SettingsButtonControl />
                </StackPanel>

                <Frame
                    x:Name="MainFrame"
                    Grid.Row="2"
                    NavigationUIVisibility="Hidden" />

